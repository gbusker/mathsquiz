html(lang='en')
  include header
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href='#')
            p Maths Quiz Admin
        div#navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Teams
            li
              a(href='#') Leaderboard

    div.container(role='main')
      h1 Team List
      table.table
        tr
          th Team name
          th Created at
        each t in teams
          tr
            td= t.name
            td= t.createdAt

    div.container
      form(method='post')
        p
          label(for="team[name]") Team name
            input(type='text', name='team[name]', value=team.name)
          input(type='submit', value='Create')
